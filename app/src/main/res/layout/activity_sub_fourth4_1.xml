<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sub_fourth_4_1">

    <RelativeLayout
        android:id="@+id/method_add_address"
        android:layout_width="match_parent"
        android:layout_height="60dp">>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/web_back_10"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:tint="?attr/colorOnSurface"
            android:onClick="imageClick_sub_fourth_4"
            android:src="@drawable/ic_backward" />

        <TextView
            android:id="@+id/textMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_toRightOf="@+id/web_back_10"
            android:fontFamily="@font/montserrat"
            android:text="Thêm địa chỉ"
            android:textSize="22sp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/method_add_address"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/add_address"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Quốc gia/Vùng"
            android:inputType="text" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Tên"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Tổ chức"
            android:inputType="text"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Địa chỉ đường phố"
            android:inputType="textPostalAddress"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Thành phố"
            android:inputType="text" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Điện thoại"
            android:inputType="phone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="489dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/button_add_address"
        app:layout_constraintTop_toBottomOf="@+id/add_address"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="imageClick_sub_fourth_4"
            android:text="Xong" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="imageClick_sub_fourth_4"
            android:text="Hủy" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>