<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/method"
        android:layout_width="match_parent"
        android:layout_height="60dp">>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/web_back_13"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:tint="?attr/colorOnSurface"
            android:layout_height="match_parent"
            android:onClick="imageClick_sub_fourth_7"
            android:src="@drawable/ic_backward" />

        <TextView
            android:id="@+id/textMethod"
            android:layout_width="3000dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/web_back_13"
            android:fontFamily="@font/montserrat"
            android:text="Thay đổi mẫu"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp" />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/method"/>

    <TextView
        android:id="@+id/text_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Chọn hình ảnh bạn muốn chọn"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar5" />
    <LinearLayout
        android:id="@+id/idgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_choose">
        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/bg1"
            android:layout_marginTop="10dp"
            android:id="@+id/choose_1"
            android:layout_marginLeft="35dp"
            android:layout_height="150dp"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg2"
            android:id="@+id/choose_2"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/text_opt"
        app:layout_constraintTop_toBottomOf="@+id/idgroup"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_opt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/montserrat"
            android:text="dark purlpe" />

        <TextView
            android:id="@+id/text_opt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/montserrat"
            android:text="dark grey" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/idgroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_opt">
        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/bg3"
            android:layout_marginTop="10dp"
            android:id="@+id/choose_3"
            android:layout_marginLeft="35dp"
            android:layout_height="150dp"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg4"
            android:id="@+id/choose_4"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/text_opt_2"
        app:layout_constraintTop_toBottomOf="@+id/idgroup2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_opt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/montserrat"
            android:text="dark orange" />

        <TextView
            android:id="@+id/text_opt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/montserrat"
            android:text="dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>