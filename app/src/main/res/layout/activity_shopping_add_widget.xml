<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sport_add_widget">
    <RelativeLayout
        android:id="@+id/input_fields_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back_shop"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:onClick="imageClick_shop_back"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/back_shop"
            android:fontFamily="@font/montserrat"
            android:text="Shopping"
            android:textSize="20sp" />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar_sport"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/input_fields_sport"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/shopping_row_1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_sport"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/shopee"
            android:layout_marginLeft="20dp"
            android:src="@drawable/shopee"
            android:onClick="imageClick_shopping"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_shopee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopee"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/montserrat"
            android:text="Shopee" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/lazada"
            android:layout_toRightOf="@+id/shopee"
            android:src="@drawable/lazada"
            android:layout_marginLeft="25dp"
            android:onClick="imageClick_shopping"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_lazada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lazada"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/text_shopee"
            android:fontFamily="@font/montserrat"
            android:text="Lazada" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/walmart"
            android:layout_toRightOf="@id/lazada"
            android:layout_marginLeft="25dp"
            android:src="@drawable/walmart"
            android:onClick="imageClick_shopping"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_walmart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/walmart"
            android:layout_marginLeft="33dp"
            android:layout_toRightOf="@id/text_lazada"
            android:fontFamily="@font/montserrat"
            android:text="Walmart" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/ikea"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ikea"
            android:background="@drawable/border"
            android:onClick="imageClick_shopping"
            android:layout_toRightOf="@+id/walmart"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ikea"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/text_walmart"
            android:fontFamily="@font/montserrat"
            android:text="IKEA" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/shopping_row_2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shopping_row_1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/ebay"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ebay"
            android:background="@drawable/border"
            android:onClick="imageClick_shopping"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_ebay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ebay"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/montserrat"
            android:text="Ebay" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/etsy"
            android:layout_toRightOf="@+id/ebay"
            android:src="@drawable/etsy"
            android:layout_marginLeft="25dp"
            android:background="@drawable/border"
            android:onClick="imageClick_shopping"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_etsy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etsy"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/text_ebay"
            android:fontFamily="@font/montserrat"
            android:text="Etsy" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/tiki"
            android:layout_toRightOf="@id/etsy"
            android:layout_marginLeft="25dp"
            android:src="@drawable/tiki"
            android:background="@drawable/border"
            android:onClick="imageClick_shopping"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_tiki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiki"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/text_etsy"
            android:fontFamily="@font/montserrat"
            android:text="Tiki" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/taobao"
            android:layout_marginLeft="25dp"
            android:src="@drawable/taobao"
            android:background="@drawable/border"
            android:onClick="imageClick_shopping"
            android:layout_toRightOf="@+id/tiki"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taobao"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/text_tiki"
            android:fontFamily="@font/montserrat"
            android:text="Taobao" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>