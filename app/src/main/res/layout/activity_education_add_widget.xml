<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sport_add_widget">
    <RelativeLayout
        android:id="@+id/input_fields_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back_education"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:onClick="imageClick_edu_back"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/back_education"
            android:fontFamily="@font/montserrat"
            android:text="Education"
            android:textSize="20sp" />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar_sport"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/input_fields_sport"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/education_row_1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_sport"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/wikihow"
            android:layout_marginLeft="20dp"
            android:src="@drawable/wikihow"
            android:onClick="imageClick_education"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_wikihow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wikihow"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/montserrat"
            android:text="Wikihow" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/duo"
            android:layout_toRightOf="@+id/wikihow"
            android:src="@drawable/duo"
            android:layout_marginLeft="25dp"
            android:onClick="imageClick_education"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_duo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duo"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/text_wikihow"
            android:fontFamily="@font/montserrat"
            android:text="Duolingo" />

        <ImageView
            android:id="@+id/wattpad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/duo"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:src="@drawable/wattpad" />

        <TextView
            android:id="@+id/text_wattpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wattpad"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_duo"
            android:fontFamily="@font/montserrat"
            android:text="Wattpad" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/quizlet"
            android:layout_marginLeft="25dp"
            android:src="@drawable/quizlet"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:layout_toRightOf="@+id/wattpad"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizlet"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/text_wattpad"
            android:fontFamily="@font/montserrat"
            android:text="Quizlet" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/education_row_2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/education_row_1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/scrib"
            android:layout_marginLeft="20dp"
            android:src="@drawable/scribb"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_scrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrib"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Scribd" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/vietjack"
            android:layout_toRightOf="@+id/scrib"
            android:src="@drawable/vietjack"
            android:layout_marginLeft="25dp"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_vietjack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vietjack"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/text_scrib"
            android:fontFamily="@font/montserrat"
            android:text="Vietjack" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/dictionary"
            android:layout_toRightOf="@id/vietjack"
            android:layout_marginLeft="25dp"
            android:src="@drawable/dictionary"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dictionary"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_vietjack"
            android:fontFamily="@font/montserrat"
            android:text="Dictionary" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/elsa"
            android:layout_marginLeft="25dp"
            android:src="@drawable/elsa"
            android:background="@drawable/border"
            android:onClick="imageClick_education"
            android:layout_toRightOf="@+id/dictionary"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/elsa"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/text_dictionary"
            android:fontFamily="@font/montserrat"
            android:text="Elsa" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>