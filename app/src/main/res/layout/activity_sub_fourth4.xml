<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/method"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/web_back_9"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:tint="?attr/colorOnSurface"
            android:onClick="imageClick_sub_fourth_4"
            android:src="@drawable/ic_backward" />

        <TextView
            android:id="@+id/textMethod"
            android:layout_width="3000dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/web_back_9"
            android:fontFamily="@font/montserrat"
            android:text="Địa chỉ và các lựa chọn khác"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/method"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/address"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/switch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Lưu và điền địa chỉ"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Kể cả các thông tin như số điện thoại, địa chỉ mail và địa chỉ giao hàng"
            android:textSize="15dp"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/address"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/address_button"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/progressBar3"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:onClick="imageClick_sub_fourth_4"
            android:text="Thêm địa chỉ"
            app:layout_constraintTop_toBottomOf="@+id/progressBar3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>