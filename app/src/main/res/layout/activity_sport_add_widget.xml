<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sport_add_widget">
    <RelativeLayout
        android:id="@+id/input_fields_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back_sport"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:onClick="imageClick_sport_add"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/back_sport"
            android:fontFamily="@font/montserrat"
            android:text="Sport"
            android:textSize="20sp" />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar_sport"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/input_fields_sport"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sport_row_1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_sport"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/espn"
            android:layout_marginLeft="20dp"
            android:src="@drawable/espn"
            android:onClick="imageClick_sport"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_espn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/espn"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/montserrat"
            android:text="ESPN" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/euro"
            android:layout_toRightOf="@+id/espn"
            android:src="@drawable/eurosport"
            android:layout_marginLeft="25dp"
            android:onClick="imageClick_sport"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/euro"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/text_espn"
            android:fontFamily="@font/montserrat"
            android:text="Euro sport" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/nfl"
            android:layout_toRightOf="@id/euro"
            android:layout_marginLeft="25dp"
            android:src="@drawable/nfl"
            android:onClick="imageClick_sport"
            android:background="@drawable/border"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_nfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nfl"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@id/text_euro"
            android:fontFamily="@font/montserrat"
            android:text="NFL" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/sport247"
            android:layout_marginLeft="25dp"
            android:src="@drawable/sport247"
            android:background="@drawable/border"
            android:onClick="imageClick_sport"
            android:layout_toRightOf="@+id/nfl"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport247"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/text_nfl"
            android:fontFamily="@font/montserrat"
            android:text="247 sport" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sport_row_2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/sport_row_1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/si"
            android:layout_marginLeft="20dp"
            android:src="@drawable/si"
            android:background="@drawable/border"
            android:onClick="imageClick_sport"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/si"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/montserrat"
            android:text="SI" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/skeedaa"
            android:layout_toRightOf="@+id/si"
            android:src="@drawable/sk"
            android:layout_marginLeft="25dp"
            android:background="@drawable/border"
            android:onClick="imageClick_sport"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_skeeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skeedaa"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/text_si"
            android:fontFamily="@font/montserrat"
            android:text="SK" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/dakar"
            android:layout_toRightOf="@id/skeedaa"
            android:layout_marginLeft="25dp"
            android:src="@drawable/dakar"
            android:background="@drawable/border"
            android:onClick="imageClick_sport"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/text_dakar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dakar"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@id/text_skeeda"
            android:fontFamily="@font/montserrat"
            android:text="Dakar" />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/cbs"
            android:layout_marginLeft="25dp"
            android:src="@drawable/cbs"
            android:background="@drawable/border"
            android:onClick="imageClick_sport"
            android:layout_toRightOf="@+id/dakar"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbs"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/text_dakar"
            android:fontFamily="@font/montserrat"
            android:text="CBS" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>