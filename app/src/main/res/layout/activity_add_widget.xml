<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/input_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:onClick="imageClick_add"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_backward" />

        <TextView
            android:id="@+id/url_input_add"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="@font/montserrat"
            android:background="@null"
            android:onClick="imageClick_add_widget"
            android:hint="Search here"
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:singleLine="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        android:layout_below="@id/input_fields"
        android:id="@+id/divider_3" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar_3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/input_fields"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar_3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Viral websites"
        android:textColor="#0000ff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/viral"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textViral"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Vapp_1"
            android:layout_width="90dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViral"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/vk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:onClick="imageClick_add_1"
                android:src="@drawable/vk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/montserrat"
                android:text="VK"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/amazon"
                android:src="@drawable/amazon"
                android:onClick="imageClick_add_1"
                android:background="@drawable/border"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Amazon"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Vapp_2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/flipkart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:onClick="imageClick_add_1"
                android:background="@drawable/border"
                android:src="@drawable/flip"
                app:shapeAppearanceOverlay="@style/circular"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="Flipkart"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/quora"
                android:src="@drawable/qora"
                android:onClick="imageClick_add_1"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textQuora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="Quora"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Vapp_3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/X"
                android:src="@drawable/twitter"
                android:onClick="imageClick_add_1"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/steam"
                android:src="@drawable/steamm"
                android:background="@drawable/border"
                android:onClick="imageClick_add_1"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textSteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="Steam"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Vapp_4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/reddit"
                android:src="@drawable/reddit"
                android:onClick="imageClick_add_1"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                app:shapeAppearanceOverlay="@style/circular"/>

            <TextView
                android:id="@+id/textReddit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="Reddit"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/weather"
                android:src="@drawable/weather"
                android:background="@drawable/border"
                android:onClick="imageClick_add_1"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="Weather"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar_4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/viral"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar_4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Category"
        android:textColor="#0000ff"
        android:textSize="20sp" />
    <RelativeLayout
        android:layout_width="150dp"
        android:id="@+id/sport_add"
        android:layout_below="@id/textApps"
        android:background="@drawable/shopping"
        android:layout_marginTop="20dp"
        android:onClick="imageClick_add_widget"
        android:layout_marginLeft="20dp"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Sport"
            android:textColor="#3399FF"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:id="@+id/shopping_add"
        android:layout_below="@id/textApps"
        android:layout_toRightOf="@+id/sport_add"
        android:background="@drawable/sport"
        android:layout_marginTop="20dp"
        android:onClick="imageClick_add_widget"
        android:layout_marginLeft="20dp"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Shopping"
            android:textColor="#FF3399"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:id="@+id/finace_add"
        android:layout_below="@id/sport_add"
        android:background="@drawable/finance"
        android:onClick="imageClick_add_widget"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Finance"
            android:textColor="#009900"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:id="@+id/education_add"
        android:layout_below="@id/shopping_add"
        android:layout_toRightOf="@+id/finace_add"
        android:background="@drawable/education"
        android:layout_marginTop="20dp"
        android:onClick="imageClick_add_widget"
        android:layout_marginLeft="20dp"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Education"
            android:textColor="#FF9900"
            android:textSize="20sp" />
    </RelativeLayout>


</RelativeLayout>
